	}
	.our-product {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
		width: 100%;
		transition:
			transform 0.4s ease-in-out,
			opacity 0.6s ease-out;
		opacity: 0;
		pointer-events: none;
		user-select: none;
		padding-top: 2em;
	}
	.our-product:not(:first-of-type) {
		position: absolute;
		width: 50%;
		height: calc(100% / var(--rows-of-productsMOB));
