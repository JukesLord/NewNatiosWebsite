---
import IndexLayout from "../../../layouts/IndexLayout.astro";
import ProductTemplate from "@components/product/product-template.astro";

import { Image } from "astro:assets";
import productImage1 from "@assets/images/products/rutin-500-100/rutin-500-100-fwc.webp";
import productImage2 from "@assets/images/products/rutin-500-100/rutin-500-100-bws.webp";

const alt = "NATIOS Rutin";
const loading = "lazy";
const productImageWidth = 1000;
const pixelDensities = [1, 1.5, 2, 2.5, 3];
const quality = 90;
---

<IndexLayout title="NATIOS Rutin">
	<ProductTemplate>
		<!-- _____________________________________________ -->
		<!-- ____________________NÁZEV____________________ -->
		<!-- _____________________________________________ -->
		<h1 slot="product-name-h1">Rutin</h1>
		<h2 slot="product-name-h2">500 mg, 100 vegan capsules</h2>

		<!-- ________________________________________________________ -->
		<!-- ____________________FOTKY VELKÉ DO 6____________________ -->
		<!-- ________________________________________________________ -->
		<div slot="large-image-1" class="large-image active">
			<Image src={productImage1} width={productImageWidth} alt={alt} quality={quality} densities={pixelDensities} loading="eager" />
		</div>

		<div slot="large-image-2" class="large-image">
			<Image src={productImage2} width={productImageWidth} alt={alt} quality={quality} densities={pixelDensities} loading={loading} />
		</div>

		<!-- ____________________________________________________________ -->
		<!-- ____________________FOTKY NÁHLEDOVÉ DO 6____________________ -->
		<!-- ____________________________________________________________ -->
		<div slot="preview-image-1" class="preview-image active">
			<Image src={productImage1} width={productImageWidth} alt={alt} quality={quality} densities={pixelDensities} loading="eager" />
		</div>

		<div slot="preview-image-2" class="preview-image">
			<Image src={productImage2} width={productImageWidth} alt={alt} quality={quality} densities={pixelDensities} loading="eager" />
		</div>

		<!-- ___________________________________________________________________________________ -->
		<!-- ____________________SELECT MOŽNOSTI (možnost video a orher 1 2)____________________ -->
		<!-- ___________________________________________________________________________________ -->
		<span slot="select-description" class="select-description">Description</span>
		<span slot="select-ingredients" class="select-ingredients">Ingredients</span>
		<span slot="select-dosage" class="select-dosage">Dosage and warnings</span>

		<!-- ____________________________________________________________________________________ -->
		<!-- ____________________DESCRIPTION DIVY (možnost video a orher 1 2)____________________ -->
		<!-- ____________________________________________________________________________________ -->
		<div slot="description-description" class="description-description active">
			<p>Rutin is a flavonoid related to quercetin that is found in various fruits and vegetables, such as citrus fruits, cherries, apples or asparagus. However, it is also found in some plants, among which are mainly the Japanese pagoda tree (Sophora japonica). Historically, foods rich in rutin have been used for their benefits in traditional Ayurvedic and Chinese medicine. Rutin and other bioflavonoids are usually found in foods that are naturally rich in vitamin C</p>

			<ul>
				<li>Effective dose contained in 1 capsule</li>
				<li>Contains no artificial additives or indigestible substances</li>
				<li>Vegan, gluten-free and GMO-free</li>
			</ul>
		</div>
		<!-- ____________________TABULKA____________________ -->
		<div slot="description-ingredients" class="description-ingredients">
			<table>
				<thead>
					<tr>
						<th
							><div class="dosage">
								<span
									><b>Serving size:</b> 1&nbsp;vegan capsule<br />
									<b>Contains:</b> 100&nbsp;servings</span
								>
							</div></th
						>
						<th>Amount Per Serving</th>
						<th>%NRV*</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td
							><b>Rutin</b>
							(from <i>Sophora japonica</i>)</td
						>
						<td>500&nbsp;mg</td>
						<td>**</td>
					</tr>

					<tr>
						<td colspan="3"
							><div class="rhp">
								<span>* Nutritional Reference Value</span>
								<span>** Nutritional Reference Value is not established</span>
							</div></td
						>
					</tr>
				</tbody>
			</table>
			<p><b>Other ingredients:</b> Veg Capsule (HPMC). The product does not contain any other added substances.</p>
		</div>
		<!-- ____________________DÁVKOVÁNÍ A UPOZORNĚNÍ____________________ -->
		<div slot="description-dosage" class="description-dosage">
			<p>
				<b>Recommended dosage:</b><br />
				As a dietary supplement, take 1 capsule daily with food and water.
			</p>
			<p>
				<b>Warning:</b><br />

				For adults only. If you have a medical condition, are pregnant, nursing or trying to conceive, or are taking medication, consult with a physician before taking this product! Keep out of reach of children. Dietary supplement. It is not a substitute for a varied diet. Do not exceed the recommended daily dosage.
			</p>
			<p>
				<b>Storage:</b><br />
				Store in a cool, dry place.
			</p>
			<p>
				<b>Made in EU</b>
			</p>
		</div>
	</ProductTemplate>
</IndexLayout>

<style is:global>
	:root {
		--number-of-photos: 2;
	}
</style>
