---
import Slide1 from "./slides/slide1-bisglycinate.astro";
import ArrowLeft from "@components/arrows/arrowLeft.astro";
import ArrowRight from "@components/arrows/arrowRight.astro";
---

<section class="hero">
	<div class="hero-slider">
		<Slide1 />
	</div>
	<div class="hero-arrows">
		<ArrowLeft />
		<ArrowRight />
	</div>
</section>

<style is:global>
	.hero {
		padding-top: 26px;
	}
	.hero-slider {
		display: flex;
	}
	.hero-slide {
		display: flex;
		flex-direction: column-reverse;
		width: 100%;
	}
	.hero-images {
		display: grid;
		grid-template-rows: 1fr;
		grid-template-columns: 1fr;
		position: relative;
		justify-content: center;
		max-width: clamp(215px, 21.308vw + 135px, 544px);
		margin: auto;
		animation: heroMainImageSlideIn 1.2s cubic-bezier(0.38, 0.27, 0.34, 1) forwards;
	}
	@keyframes heroMainImageSlideIn {
		0% {
			rotate: 10deg;
			transform: translateX(100vw);
		}
		100% {
			rotate: 0deg;
			transform: translateX(0);
		}
	}
	.hero-main-image {
		grid-row: 1;
		grid-column: 1;
		z-index: 2;
	}

	.hero-capsules {
		position: relative;
		width: 100%;
		height: 100%;
		grid-row: 1;
		grid-column: 1;
		animation: heroCapsulesSlideIn 1.2s cubic-bezier(0.38, 0.27, 0.34, 1) forwards;
	}
	@keyframes heroCapsulesSlideIn {
		0% {
			rotate: 10deg;
			transform: scale(0.6);
		}
		100% {
			rotate: 0deg;
			transform: scale(1);
		}
	}
	.hero-capsules > * {
		position: absolute;
		width: 100%;
		z-index: 1;
	}

	.hero-capsule-1 {
		max-width: clamp(38px, 2.915vw + 27px, 83px);
		left: 0px;
		bottom: 0;
		rotate: -6deg;
		transform: translate(-30%, -70%);
	}
	.hero-capsule-2 {
		max-width: clamp(44px, 5.117vw + 24px, 123px);
		transform: translate(30%, 70%);
	}
	.hero-capsule-3 {
		max-width: clamp(42px, 5.376vw + 21.8px, 125px);
		right: 0;
		top: 50%;
		rotate: 10deg;
		transform: translate(35%, -100%);
	}
	.hero-text {
		padding-top: 30px;
		color: var(--color-white);
		line-height: var(--lh-1_2);
	}
	.hero-slide h2,
	.hero-slider > .hero-slide:first-child h1 {
		font-size: var(--fs-60-28);
		font-weight: var(--fw-bold);
		padding-bottom: 0.65em;
	}
	.hero-slide h3,
	.hero-slider > .hero-slide:first-child h2 {
		opacity: 0.7;
		font-size: var(--fs-40-20);
		font-weight: var(--fw-regular);
	}
	.hero-arrows {
		display: flex;
		gap: 10px;
		justify-content: center;
	}
	.arrow-left,
	.arrow-right {
		max-width: 10vw;
	}
</style>
