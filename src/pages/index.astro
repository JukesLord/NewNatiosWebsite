---
import IndexLayout from "../layouts/IndexLayout.astro";
import { Image } from "astro:assets";
import myImage from "../content/images/products/Ashwagandha_Extra_5000_90/front/Ashwagandha_5000_90_front_1200.webp"; // Image is 1600x900
---

<IndexLayout title="Natios - It's Better To Be The Best">
	<h1>Astroxxx</h1>
	<a href="/test"
		><img
			src="content/images/products/Ashwagandha_Extra_5000_90/front/Ashwagandha_5000_90_front_1200.webp"
			alt=""
			srcset=""
			transition:name="slide"
		/></a
	>
	<Image
		src={myImage}
		widths={[240, 540, 720, myImage.width]}
		sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${myImage.width}px`}
		alt="A description of my image."
	/>
</IndexLayout>

<style>
	h1 {
		font-size: 4rem;
		font-family: var(--ff-secondary);
	}
</style>
