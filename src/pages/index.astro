---
import IndexLayout from "../layouts/IndexLayout.astro";
import Hero from "@components/homepage/hero/hero.astro";
import VyhodyZnacky from "@components/homepage/vyhody-znacky/vyhody-znacky.astro";
import NaseProdukty from "@components/nase-produkty/nase-produkty.astro";
import NovinkyNatios from "@components/homepage/novinky-natios/novinky-natios.astro";
import OZnacceNatios from "@components/homepage/o-znacce-natios/o-znacce-natios.astro";
---

<IndexLayout title="Natios - It's Better To Be The Best">
	<Hero />
	<VyhodyZnacky />
	<NaseProdukty />
	<NovinkyNatios />
	<OZnacceNatios />
</IndexLayout>

<style></style>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		$("body").addClass("homepage");
	});
	document.querySelector(".header-logo").addEventListener("click", function (event) {
		event.preventDefault();
		$(window).scrollTop(0);
	});
	document.querySelector(".footer-logo").addEventListener("click", function (event) {
		event.preventDefault();
		$(window).scrollTop(0);
	});
</script>
